<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="#CC000000"
            android:layout_height="140dp"
            >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="分享到"
                android:textSize="13sp"
                android:layout_marginTop="23dp"
                android:layout_centerHorizontal="true"
                />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="80dp"
                >

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/mRlWechat"
                    android:layout_weight="1"
                    >

                <ImageView
                        android:id="@+id/share_wx"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/share_wechat"
                        />

                <TextView
                        android:textSize="13sp"
                        android:gravity="center"
                        android:textColor="#CCFFFFFF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="17dp"
                        android:text="微信"
                        />
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/mRlWeixinCircle"
                    android:layout_weight="1"
                    >

                <ImageView
                        android:id="@+id/share_wx_timeline"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/share_moment"
                        />

                <TextView
                        android:textSize="13sp"
                        android:gravity="center"
                        android:textColor="#CCFFFFFF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="17dp"
                        android:text="朋友圈"
                        />
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/mRlWeibo"
                    android:layout_weight="1"
                    >

                <ImageView
                        android:id="@+id/share_weibo"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/share_weibo"
                        />

                <TextView
                        android:textSize="13sp"
                        android:gravity="center"
                        android:textColor="#CCFFFFFF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="17dp"
                        android:text="微博"
                        />
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/mRlQQ"
                    android:layout_weight="1"
                    >

                <ImageView
                        android:id="@+id/share_qq"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/share_qq"
                        />

                <TextView
                        android:textSize="13sp"
                        android:gravity="center"
                        android:textColor="#CCFFFFFF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="17dp"
                        android:text="QQ"
                        />
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/mRlQzone"
                    android:layout_weight="1"
                    >

                <ImageView
                        android:id="@+id/share_qzone"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/share_qzone"
                        />

                <TextView
                        android:textSize="13sp"
                        android:gravity="center"
                        android:textColor="#CCFFFFFF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="17dp"
                        android:text="QQ空间"
                        />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/mRlFb"
                android:layout_weight="1"
                >

                <ImageView
                    android:id="@+id/share_facebook"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/share_facebook"
                    />

                <TextView
                    android:textSize="13sp"
                    android:gravity="center"
                    android:textColor="#CCFFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="17dp"
                    android:text="FaceBook"
                    />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
